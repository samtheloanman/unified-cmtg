# Production Environment Variables Template
# Copy to .env.production and fill in values

# =============================================================================
# REQUIRED - Security Critical
# =============================================================================
# Generate with: openssl rand -base64 50
SECRET_KEY=

# Database connection string (use production DB)
DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require

# Strong password for local Postgres (if using local DB)
POSTGRES_PASSWORD=

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DJANGO_ALLOWED_HOSTS=custommortgageinc.com www.custommortgageinc.com api.custommortgageinc.com
WAGTAILADMIN_BASE_URL=https://cms.custommortgageinc.com
CORS_ALLOWED_ORIGINS=https://custommortgageinc.com https://www.custommortgageinc.com
NEXT_PUBLIC_API_URL=https://api.custommortgageinc.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Google AI (Gemini) for Rate Sheet Processing
GOOGLE_API_KEY=

# Floify LOS Integration
FLOIFY_API_KEY=
FLOIFY_COMPANY_ID=

# =============================================================================
# REDIS / CELERY
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# EMAIL (Optional - for notifications)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@custommortgageinc.com
