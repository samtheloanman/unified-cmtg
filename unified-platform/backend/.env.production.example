# Vercel Production Environment Variables
# Copy these values to your Vercel Project Settings

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.prod
SECRET_KEY=generate-a-strong-random-secret-key-here
DEBUG=False
ALLOWED_HOSTS=.vercel.app,.c-mtg.com

# Database (Required - External Postgres)
# Example: postgres://user:password@host:port/dbname (Neondb, Supabase, etc.)
DATABASE_URL=

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Integrations
FLOIFY_API_KEY=
FLOIFY_WEBHOOK_SECRET=
GOOGLE_API_KEY=

# Email (Optional - for sending notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@custommortgageinc.com

# Redis / Celery (Optional - Serverless limitations apply)
# CELERY_BROKER_URL=redis://...
